include header
block content
    .main.layui-clear
        .warp
            .page-main
                .page-title
                    h2 发表话题
                .layui-form-pane
                    form(action='/post', method='POST')
                        .layui-form-item
                            label.layui-form-label 标题
                            .layui-input-block
                                input.layui-input(type='text', name='tistle', autocomplete='off', placeholder='请输入标题')
                        .layui-form-item
                            .layui-form
                                .layui-inline
                                    label.layui-form-label 发1表类型
                                    .layui-input-block
                                        select(name='city', lay-verify='required')
                                            option(value='') 请选择一个城市
                                            option(value='010') 北京
                                            option(value='021') 上海
                                            option(value='0571', selected='') 杭州
                                .layui-inline
                                    label.layui-form-label 发1表类型
                                    .layui-input-block
                                        select(name='city', lay-verify='required')
                                            option(value='') 请选择一个城市
                                            option(value='010') 北京
                                            option(value='021') 上海
                                            option(value='0571', selected='') 杭州
                        textarea#content(style='display: none;')
