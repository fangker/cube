                        .form-bottom-fill
                        .layui-form-item
                            button.layui-btn(lay-filter='*', type='submit') 立即发布
    script(type='text/javascript', src='./js/layui.js')
    script(type='text/javascript', src='./js/lay/modules/index.js')
    script.
        layui.config({
            base: 'js/lay/modules/' //你的模块目录
        }).use('index'); //加载入口
        layui.use('layedit', function () {
            var layedit = layui.layedit;
            layedit.build('content', {
                height: 450 //设置编辑器高度
            }); //建立编辑器
            layedit.build('LAY_demo2', {
                tool: ['face', 'link', 'unlink', '|', 'left', 'center', 'right']
                , height: 100
            })
        });
