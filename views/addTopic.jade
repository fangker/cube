extends header

block main
    .main.layui-clear
        .warp
            .page-main
                .page-title
                    h2 发表话题
                .layui-form-pane
                    form(action='/topic/add', method='POST')
                        .layui-form-item
                            label.layui-form-label 标题
                            .layui-input-block
                                input.layui-input(type='text', name='title', autocomplete='off', placeholder='请输入标题')
                        .layui-form-item
                            .layui-form
                                .layui-inline
                                    label.layui-form-label 发1表类型
                                    .layui-input-block
                                        select(name='tab', lay-verify='required')
                                            option(value='') 请选择一个城市
                                            option(value='010') 北京
                                            option(value='021') 上海
                                            option(value='share', selected='true') 杭州
                                .layui-inline
                                    label.layui-form-label 发1表类型
                                    .layui-input-block
                                        select(name='zz', lay-verify='required')
                                            option(value='') 请选择一个城市
                                            option(value='010') 北京
                                            option(value='021') 上海
                                            option(value='0571', selected='true') 杭州
                        textarea#content( name='content',style='display: none;height: 560px;')
                        .form-bottom-fill
                        .layui-form-item
                            button.layui-btn(type='submit') 立即发布
    script(type='text/javascript', src='/js/layui.js')
    script.
        layui.config({
            base: '/js/lay/modules/' //你的模块目录
        }).use('index'); //加载入口
        var editor = new wangEditor('content');
        editor.config.mapAk = 'ZwDq5sGhrTKGjLVPkoWrRiut0PjrqgqR';
        editor.config.uploadImgUrl = '/uploads';
        // 配置自定义参数（举例）
        editor.config.uploadParams = {
            token: 'abcdefg',
            user: 'wangfupeng1988'
        };
        // 设置 headers（举例）
        editor.config.uploadHeaders = {
            'Accept' : 'text/x-json'
        };
        // 隐藏掉插入网络图片功能。该配置，只有在你正确配置了图片上传功能之后才可用。
        editor.config.hideLinkImg = false;
        editor.config.printLog = false;
        editor.config.uploadImgFileName = 'file'
        editor.create();